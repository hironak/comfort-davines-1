doctype html
html
  head
    meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no"
    = title_tag
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    "/editable/stylesheets/#{Page.cache_key}", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  body

    .header
      .container
        ul.consumer
          - if current_consumer
            li
              = link_to destroy_consumer_session_path, method: :delete do
                = image_tag 'header/signout.jpg', alt: 'sign out'
            li
              = link_to carts_path do
                = image_tag 'header/cart.jpg', alt: "Cart(#{current_cart.items.count})"
            li
              = link_to mypage_root_path do
                = image_tag 'header/signin-mypage.jpg', alt: 'sign in'

          - else
            li
              = link_to new_consumer_registration_path do
                = image_tag 'header/signup.jpg', alt: 'sign up'
            li
              = link_to carts_path do
                = image_tag 'header/cart.jpg', alt: "Cart(#{current_cart.items.count})"
            li
              = link_to new_consumer_session_path do
                = image_tag 'header/signin-mypage.jpg', alt: 'sign in'

        .logo
          = link_to root_path do
            = image_tag 'header/logo.jpg', alt: 'davines', height: 61, width: 230

        .globalnavi
          ul
            li = link_to "初めての方へ", introduction_path
            li = link_to "ダヴィネスとは ", about_path
            li = link_to "ご利用案内 ", utilization_path
            li = link_to "よくあるご質問 ", faq_path
            li = link_to "サイトマップ ", sitemap_path
            li = link_to "お問い合わせ", contact_path

    .contents class="#{controller.controller_path.gsub('/', '_')}"

      .container
        - if notice
          p.notice = notice
        - if alert
          p.alert = alert

      - if controller_name == 'welcome'
        = yield
      - else
        .container
          = yield

      .totop
        = link_to '#header', class: 'scrolltotop' do
          = image_tag 'footer/pagetop.jpg', alt: 'トップページへ'

    .footer
      .container
        .links
          h4 商品カテゴリー
          ul
            - Category.all.each do |category|
              li = category.name

        .links
          h4 ショッピングガイド
          ul
            li = link_to "初めての方へ", introduction_path
            li = link_to "ご利用案内 ", utilization_path
            li = link_to "よくあるご質問 ", faq_path
            li = link_to "サイトマップ ", sitemap_path

        .links
          h4 Davinesについて
          ul
            li = link_to "ダヴィネスとは ", about_path
            li = link_to "会社概要", company_path
            li = link_to "特定商取引に関する記載", tradeinfo_path
            li = link_to "お問い合わせ", contact_path
            li = link_to "店舗情報", shops_path

        .copyright
          p &copy;comfort japan all rights reserved.
