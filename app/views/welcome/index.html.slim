.banner
  .container

.container
  .main
    .lineup
      h2 = image_tag 'welcome/lineup.png', alt: 'ラインナップ'
    .topics
    .newitem
      h2 = image_tag 'welcome/newitem.png', alt: 'New Item'
    .ranking
      h2 = image_tag 'welcome/ranking.png', alt: 'ランキング'
    .voice
      h2 = image_tag 'welcome/usercoment.png', alt: 'お客様の声'
    .information
      h2 = image_tag 'welcome/service.png', alt: 'お得なショッピングサービス'
    .news
      h2 = image_tag 'welcome/news.png', alt: 'News'
    .products
  .side
    = render 'side'

/ .container
/   .news
/     h3
/       | Davines news
/       small ダヴィネス・ニュース
/     .box
/       - 5.times.each do
/         .row
/           .date 2013.12.10
/           .info
/             strong 見出しコメント見出しコメント見出しコメント見出しコメント見出しコメント見出しコメント見出しコメント見出しコメント
/             p コメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメントコメント
/
/   .ranking
/     h3
/       | Ranking
/       small ランキング
/     .box
/       .items
/         - Product.available.limit(5).each_with_index do |item, n|
/           .item
/             .rank = image_tag "welcome/ranking0#{n+1}.jpg", alt: "#{n+1}位"
/             .image
/               = link_to item do
/                 = image_tag item.image.url(:thumb)
/             .name
/               = item.name
/
/   .series
/     h3
/       | シリーズで探す
/     .box
/       .items
/         - Series.all.each do |series|
/           .item
/             .image = image_tag series.topimage.url, alt: series.name
/
/   .category
/     h3
/       | カテゴリーで探す
/     .box
/       - Category.all.each do |category|
/         .item
/           = category.name

