
p
  strong Name:
  = @product.name

p
  strong Price:
  = @product.price

p
  strong Image:
  = image_tag @product.image.url(:medium)

p
  strong Series:
  = @product.series.try :name

p
  strong Category:
  = @product.category.try :name

p
  strong Stock:
  = @product.stock

- if @product.page
  .editable class="page#{@product.page.id}"
    = page_body @product.page.body, @product.page.render_type

= link_to '編集', edit_admin_product_path(@product)
'|
= link_to '削除', [:admin, @product], data: { confirm: 'Are you sure?' }, method: :delete
'|
= link_to '戻る', admin_products_path
