<% require "csv" %>
<% require "kconv" %>
<%=
CSV.generate row_sep: "\r" do |csv|
  csv << %w[
      加盟店取引ID
      注文日
      購入者会社名
      購入者部署名
      購入者氏名（漢字）
      購入者氏名（カナ）
      購入者〒
      購入者住所
      購入者電話番号
      購入者メールアドレス
      お届先会社名
      お届先部署名
      お届先氏名（漢字）
      お届先氏名（カナ）
      お届先〒
      お届先住所
      お届先電話番号
      決済方法
      カード支払方法
      カード番号
      カード有効期限
      顧客請求金額
      商品名
      単価
      数量
  ]

  @orders.each do |order|
    information = order.consumer.try(:information) || order.shipment
    shipment = order.shipment
    first_row = [
      order.number,                    # 加盟店取引ID
      l(order.created_at.to_date),     # 注文日時
      nil,                             # 購入者会社名
      nil,                             # 購入者部署名
      information.name,                # 購入者氏名（漢字）
      information.name_kana,           # 購入者氏名（カナ）
      information.postalcode,          # 購入者郵便番号
      information.complete_address,    # 購入者住所
      information.phone,               # 購入者電話番号
      order.email,                     # 購入者メールアドレス
      nil,                             # お届先会社名
      nil,                             # お届先部署名
      shipment.name,                   # お届先氏名（漢字）
      shipment.name_kana,              # お届先氏名（カナ）
      shipment.postalcode,             # お届先郵便番号
      shipment.complete_address,       # お届先住所
      shipment.phone,                  # お届先電話番号
      1,                               # 決済方法
      nil,                             # カード支払方法
      nil,                             # カード番号
      nil,                             # カード有効期限
      order.total_price                # 顧客請求金額
    ]
    nil_row = [
      nil,   # 加盟店取引ID
      nil,   # 注文日時
      nil,   # 購入者会社名
      nil,   # 購入者部署名
      nil,   # 購入者氏名（漢字）
      nil,   # 購入者氏名（カナ）
      nil,   # 購入者郵便番号
      nil,   # 購入者住所
      nil,   # 購入者電話番号
      nil,   # 購入者メールアドレス
      nil,   # お届先会社名
      nil,   # お届先部署名
      nil,   # お届先氏名（漢字）
      nil,   # お届先氏名（カナ）
      nil,   # お届先郵便番号
      nil,   # お届先住所
      nil,   # お届先電話番号
      nil,   # 決済方法
      nil,   # カード支払方法
      nil,   # カード番号
      nil,   # カード有効期限
      nil    # 顧客請求金額
    ]

    order.items.each_with_index do |item, i|
      csv << (i > 0 ? nil_row : first_row) + [
        item.product.name,               # 商品名
        item.view_origin_price,          # 単価
        item.amount                      # 数量
      ]
    end

    # 送料
    order.tap do |order|
      csv << nil_row + [
        '送料',        # 商品名
        order.postage, # 単価
        1              # 数量
      ]
    end
  end
end.tosjis.html_safe
%>
