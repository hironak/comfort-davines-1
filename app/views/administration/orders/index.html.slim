h1 Listing orders

= form_tag admin_orders_path, method: :get do
  = select_tag 'status', options_for_select({'すべて' => nil}.merge(Order::STATUSES), params[:status])
  = select_tag 'payment_type', options_for_select({'すべて' => nil}.merge(Payment::TYPES), params[:payment_type])
  = submit_tag 'submit'

p = link_to "CSV Download", status: params[:status], payment_type: params[:payment_type], format: :csv
p = link_to "CSV NP後払い", status: params[:status], payment_type: params[:payment_type], output: 'NP', format: :csv

table
  thead
    tr
      th.w25 注文ID
      th.w25 注文日時
      th.w25 決済方法
      th.w25 ステータス

  tbody
    - @orders.each do |order|
      tr
        td.w25 = link_to order.number, [:admin, order]
        td.w25 = l order.created_at
        td.w25 = order.payment_type_human
        td.w25 = order.status_human

= paginate @orders
